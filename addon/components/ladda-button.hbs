<button
  class="ladda-button {{@class}}"
  data-spinner-color={{this.spinnerColor}}
  data-spinner-lines={{this.spinnerLines}}
  data-spinner-size={{this.spinnerSize}}
  data-style={{this.buttonStyle}}
  disabled={{this.disabled}}
  type={{this.type}}
  {{did-insert this.didInsert}}
  {{did-update this.updateLoadingState @inFlight}}
  {{on "click" this.handleClick}}
  {{on "mousedown" this.handleMouseDown}}
  {{on "mouseleave" this.handleMouseLeave}}
>
  <span class="ladda-label">
    {{#if @text}}
      {{@text}}
    {{else}}
      {{yield this.longPress this.longProgress}}
    {{/if}}
  </span>
</button>
